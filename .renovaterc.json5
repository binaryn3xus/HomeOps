{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>binaryn3xus/HomeOps//.renovate/autoMerge.json5",
    "github>binaryn3xus/HomeOps//.renovate/customManagers.json5",
    "github>binaryn3xus/HomeOps//.renovate/grafanaDashboards.json5",
    "github>binaryn3xus/HomeOps//.renovate/groups.json5",
