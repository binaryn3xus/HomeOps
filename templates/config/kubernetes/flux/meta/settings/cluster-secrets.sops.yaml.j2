---
# yaml-language-server: $schema=https://kubernetesjsonschema.dev/v1.18.1-standalone-strict/secret-v1.json
apiVersion: v1
kind: Secret
metadata:
  name: cluster-secrets
  namespace: flux-system
#% if cloudflare.enabled %#
stringData:
  SECRET_DOMAIN: "#{ cloudflare.domain }#"
  SECRET_ACME_EMAIL: "#{ cloudflare.acme.email }#"
  SECRET_CLOUDFLARE_TUNNEL_ID: "#{ cloudflare.tunnel.id }#"
#% else %#
stringData: {}
#% endif %#
