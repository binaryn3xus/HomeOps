{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
      {
        "description": ["Loose versioning for non-semver containers"],
        "matchDatasources": ["docker"],
        "matchPackagePatterns": ["plex"],
        "versioning": "loose"
      },
      {
        "description": "Custom versioning for minio",
        "matchDatasources": ["docker"],
        "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$",
        "matchPackagePatterns": ["minio"]
      },
      {
        "matchDatasources": ["docker"],
        "matchPackagePatterns": ["corentinth/it-tools"],
        // Accepts: 2024.5.13-a0bc346 (year.month.day-sha)
        "versioning": "regex:^(?<major>\\d{4})\\.(?<minor>\\d{1,2})\\.(?<patch>\\d{1,2})-(?<sha>[a-f0-9]{7,})$"
      }
    ]
  }
