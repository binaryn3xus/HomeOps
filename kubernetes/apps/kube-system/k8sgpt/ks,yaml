  name: &app k8sgpt
  namespace: flux-system
spec:
  dependsOn:
    - name: intel-device-plugin-operator
  commonMetadata:
    labels:
      app.kubernetes.io/name: *app
  path: ./kubernetes/apps/kube-system/k8sgpt/resources
  prune: true
  sourceRef:
    kind: GitRepository
    name: home-kubernetes
  wait: true
  interval: 30m
  retryInterval: 1m
  timeout: 3m
